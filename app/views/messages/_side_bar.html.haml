.side_bar
  .LeftHeader
    .LeftHeader__list
      %h3.LeftHeader__list__userName
        = current_user.name
      %ul.LeftHeader__list__iconList
        %li.LeftHeader__list__iconList__Icon
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.LeftHeader__list__iconList__Icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            =group.name
          .Group__message
            = group.show_last_message
